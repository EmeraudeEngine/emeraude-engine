#!/bin/php
<?php

    require('./tools/tools-lib.php');

	define('PROJECT_NAME', 'Emeraude-Engine');
	define('PROJECT_PLACE', 'https://bitbucket.org/londnoir/emeraude-engine');
	define('IDENTITY', '"LondNoir" <londnoir@gmail.com>');

	$paths = [
		'./libraries',
		'./lab',
		'./src'
	];

	$extensions = [
		'h', 'hpp',
		'c', 'cpp',
		'in'
	];

	$exclusions = [
		'txt'
	];

	/* =========== Execution =========== */

	$fileCount = 0;

	foreach ( $paths as $path )
	{
		$fileCount += crawl_directory($path, $extensions, $exclusions);
	}

	echo 
		$fileCount . ' files processed.' . PHP_EOL . 
		'Code statistics : ' . PHP_EOL;

	system('sloccount ' . implode(' ', $paths));

?>